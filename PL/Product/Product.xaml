<Window x:Class="PL.Product.Product"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Product"
        mc:Ignorable="d"
        Title="Product" Height="450" Width="800">
    <Grid Name="MainGrid">
        <Label Content="Product ID" HorizontalAlignment="Left" Margin="230,67,0,0" VerticalAlignment="Top"/>
        <Label Content="Category" HorizontalAlignment="Left" Margin="239,118,0,0" VerticalAlignment="Top"/>
        <Label Content="Product Name" HorizontalAlignment="Left" Margin="247,180,0,0" VerticalAlignment="Top"/>
        <Label Content="Price" HorizontalAlignment="Left" Margin="248,234,0,0" VerticalAlignment="Top"/>
        <Label Content="Amount" HorizontalAlignment="Left" Margin="238,295,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Id" HorizontalAlignment="Left" Margin="400,67,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Margin="403,183,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="Catgory" HorizontalAlignment="Left" Margin="398,118,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0"/>
        <TextBox x:Name="Price" HorizontalAlignment="Left" Margin="406,242,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Instock" HorizontalAlignment="Left" Margin="406,298,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="AddProduct" Content="Confirm Add" HorizontalAlignment="Left" Margin="688,321,0,0" VerticalAlignment="Top" Click="AddProductClick"/>
        <Button x:Name="UpdateProduct" Content="Confirm Update" HorizontalAlignment="Left" Margin="688,321,0,0" VerticalAlignment="Top" Width="72" Height="20" Click="UpdateProductClick"/>

    </Grid>
</Window>