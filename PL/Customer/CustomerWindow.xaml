<Window x:Class="PL.Customer.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Customer"
        mc:Ignorable="d"
        Title="CustomerWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="\image\background-image.jpg" Stretch="Fill"/>
    </Window.Background>
    <Grid>
        <Label Content="Customer Access" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Cooper Black" FontSize="50" Foreground="#DDAF9BF0"/>

        <Button Content="New Order" HorizontalAlignment="Left" Margin="680,267,0,0" VerticalAlignment="Top" Click="NewOrder"/>
        <Button Content="Order Tracking" HorizontalAlignment="Left" Margin="656,217,0,0" VerticalAlignment="Top" Click="OrderTracking"/>

    </Grid>
</Window>
