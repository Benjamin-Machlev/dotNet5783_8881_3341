<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Icon="onlineshopping_117952.ico"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="MainWindow" Height="550" Width="800">

    <Window.Background>
        <ImageBrush ImageSource="\image\background-image.jpg" Stretch="Fill" />
    </Window.Background>

    <Grid>
        <Label Content="Benny And Yossi" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Cooper Black" FontSize="50" Foreground="#DDAF9BF0" />

        <Button Content="Admin Access" Margin="0,0,10,50"
                HorizontalAlignment="Right" VerticalAlignment="Stretch"
                Click="AdminAccsess" />

        <Button Content="Customer Access" Margin="0,0,10,-50"
                HorizontalAlignment="Right" VerticalAlignment="Stretch"
                Click="CustomerAccsess" />
    </Grid>
</Window>