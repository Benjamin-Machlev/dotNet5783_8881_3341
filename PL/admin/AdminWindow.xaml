<Window x:Class="PL.admin.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.admin"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="AdminWindow" Height="550" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="\image\background-image.jpg" Stretch="Fill" />
    </Window.Background>

    <Grid>
        <Label Content="Admin Access" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Cooper Black" FontSize="50" Foreground="#DDAF9BF0" />

        <Button Content="Product List" Margin="0,0,10,50"
                HorizontalAlignment="Right" VerticalAlignment="Stretch"
                Click="ProductList" Cursor="Hand" />

        <Button Content="Order List" Margin="0,0,10,-50"
                HorizontalAlignment="Right" VerticalAlignment="Stretch"
                Click="OrderList" Cursor="Hand" />

        <Button Content="Statistics Orders" Margin="0,0,10,-150"
                HorizontalAlignment="Right" VerticalAlignment="Stretch"
                Click="StatisticsOrders" Cursor="Hand" />
    </Grid>
</Window>